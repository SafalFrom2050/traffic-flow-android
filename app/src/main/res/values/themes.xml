<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrafficFlow" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>

        <item name="android:colorBackground">@color/background_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="cardBackgroundColor">@color/background_light</item>

        <item name="colorOnBackground">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowBackground">@null</item>
        <item name="bottomSheetStyle">@null</item>
    </style>

    <style name="Theme.TrafficFlow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrafficFlow.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/background_light</item>
    </style>

    <style name="Theme.TrafficFlow.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/background_dark</item>
        <item name="tabIndicatorColor">@color/secondary</item>
        <item name="android:background">@color/background_light</item>
    </style>

    <style name="Theme.TrafficFlow.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>